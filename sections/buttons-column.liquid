{
  "name": "Buttons column",
  "settings": [
    {
      "id": "link-1",
      "type": "url",
      "label": "Button link 1"
    },
    {
      "id": "linktext-1",
      "type": "text",
      "label": "Button text 1",
      "default": "Click here"
    },
    {
      "type": "image_picker",
      "id": "button_image-1",
      "label": "Button image 1"
    },
    {
      "id": "link-2",
      "type": "url",
      "label": "Button link 2"
    },
    {
      "id": "linktext-2",
      "type": "text",
      "label": "Button text 2",
      "default": "Click here"
    },
    {
      "type": "image_picker",
      "id": "button_image-2",
      "label": "Button image 2"
    },
    {
      "id": "link-3",
      "type": "url",
      "label": "Button link 3"
    },
    {
      "id": "linktext-3",
      "type": "text",
      "label": "Button text 3",
      "default": "Click here"
    },
    {
      "type": "image_picker",
      "id": "button_image-3",
      "label": "Button image 3"
    }
    ],
  "presets": [
    {
      "name": "Buttons column",
      "category": "Custom"
    }
  ]
}
{% endschema %}

